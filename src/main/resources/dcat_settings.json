{
  "analysis": {
    "analyzer": {
      "path-analyzer": {
        "type": "custom",
        "tokenizer": "path-tokenizer"
      },
      "analyzer_keyword": {
        "type": "custom",
        "tokenizer": "keyword",
        "filter": [
          "asciifolding",
          "lowercase"
        ]
      },
      "analyzer_shingle": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "asciifolding",
          "lowercase",
          "shingle"
        ]
      }
    },
    "tokenizer": {
      "path-tokenizer": {
        "type": "path_hierarchy",
        "delimiter": "/"
      }
    }
  }
}
